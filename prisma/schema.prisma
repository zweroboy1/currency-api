generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Currency {
  id        Int      @id @default(autoincrement())
  code_from String
  code_to   String
  rate      Float
  updatedAt DateTime @updatedAt
}

model Subscription {
  id    Int     @id @default(autoincrement())
  email String  @unique
}